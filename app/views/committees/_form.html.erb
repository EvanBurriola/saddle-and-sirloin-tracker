<%= form_with(model: committee) do |form| %>
    <%# Display errors if users input invalid attributes %>
    <% if committee.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(committee.errors.count, "error") %> prohibited this committee from being saved:</h2>

        <ul>
          <% committee.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <%# Create a form text field for users to enter a committee's name %>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field(:committee_name) %>
    </div>
  
    <%# Create a form text field for users to enter a committee's description %>
    <div>
      <br>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area(:description) %>
    </div>
  
    <div>
      <br>
      <%= form.submit %>
    </div>
  <% end %>