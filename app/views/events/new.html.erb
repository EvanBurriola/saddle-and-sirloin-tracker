<div class="container mx-auto">
    <br>
    <h1 class="text-3xl font-bold">New Event</h1>
    <br>
</div>

<div class="container mx-auto">
<%= form_for(@event) do |form| %>
  <% if @event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <br>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field(:name, placeholder: "Event Name") %>
  </div>

  <div>
    <br>
    <%= form.label :date, style: "display: block" %>
    <%= form.text_field(:date, placeholder: "dd/mm/yyyy") %>
  </div>

  <div>
    <br>
    <%= form.label :event_type, style: "display: block" %>
    <%= form.text_field(:event_type,  placeholder: "Event Type") %>
  </div>

  <div>
    <br>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field(:description,  placeholder: "Description") %>
  </div>

  <div>
    <br>
    <%= form.submit %>
  </div>
  <% end %>
</div>
  